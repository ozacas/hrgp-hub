<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>hrgp-hub</display-name>
    <servlet>
        <servlet-name>Alignment</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.Alignment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlignmentDownload</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.AlignmentDownload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvailableDownloads</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.AvailableDownloads</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileDownload</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.FileDownload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TreeDownload</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.TreeDownload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageCarousel</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.ImageCarousel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>auto1KPDataComplete</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.auto1KPDataComplete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssemblyDownload</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.AssemblyDownload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>au.edu.unimelb.plantcell.hrgp.services.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvailableDownloads</servlet-name>
        <url-pattern>/services/AvailableDownloads</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileDownload</servlet-name>
        <url-pattern>/services/FileDownload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TreeDownload</servlet-name>
        <url-pattern>/services/TreeDownload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageCarousel</servlet-name>
        <url-pattern>/services/ImageCarousel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auto1KPDataComplete</servlet-name>
        <url-pattern>/services/auto1KPDataComplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssemblyDownload</servlet-name>
        <url-pattern>/services/data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/services/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Alignment</servlet-name>
        <url-pattern>/services/Alignment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlignmentDownload</servlet-name>
        <url-pattern>/services/AlignmentDownload</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>hrgp-hub</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>hrgp</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
        <role-name>hrgp</role-name>
    </security-role>
</web-app>
